<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_preview_audio">

    <com.example.base_project.base.BaseTextview
        android:id="@+id/baseTextview9"
        style="@style/txt_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/preview_audio"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.base_project.base.BaseTextview
        android:id="@+id/txt_playing"
        style="@style/txt_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/now_playing"
        android:textColor="#89898980"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/baseTextview9"
        app:layout_constraintTop_toBottomOf="@+id/baseTextview9"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_split"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_spkit"
        app:layout_constraintBottom_toBottomOf="@+id/baseTextview9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/baseTextview9"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_split"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints">

        <com.example.base_project.base.BaseTextview
            android:id="@+id/baseTextview11"
            style="@style/txt_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/part_1"
            android:textColor="@color/gray_200"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_play_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseTextview11" />

        <SeekBar
            android:id="@+id/progress_circular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:max="100"
            android:progressDrawable="@drawable/cutom_seekbar_volume"
            android:thumb="@drawable/ic_progress_volume"
            app:layout_constraintBottom_toBottomOf="@+id/ic_play_1"
            app:layout_constraintEnd_toStartOf="@+id/ic_play_1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_play_1"
            tools:ignore="MissingConstraints" />

        <com.example.base_project.base.BaseTextview
            android:id="@+id/txt_start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:text="00:00"
            android:textColor="#C5C5C5"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/progress_circular"
            app:layout_constraintTop_toBottomOf="@+id/progress_circular" />

        <com.example.base_project.base.BaseTextview
            android:id="@+id/txt_end_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12sp"
            android:text="00:50"
            android:textColor="#C5C5C5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_start_1"
            app:layout_constraintEnd_toStartOf="@+id/ic_play_1"
            app:layout_constraintTop_toBottomOf="@+id/progress_circular" />

        <com.example.base_project.base.BaseTextview
            android:id="@+id/baseTextview12"
            style="@style/txt_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/part_2"
            android:textColor="@color/gray_200"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_start_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_play_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseTextview12" />

        <SeekBar
            android:id="@+id/progress_circular_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:max="100"
            android:progressDrawable="@drawable/cutom_seekbar_volume"
            android:thumb="@drawable/ic_progress_volume"
            app:layout_constraintBottom_toBottomOf="@+id/ic_play_2"
            app:layout_constraintEnd_toStartOf="@+id/ic_play_2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_play_2"
            tools:ignore="MissingConstraints" />

        <com.example.base_project.base.BaseTextview
            android:id="@+id/txt_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:text="00:00"
            android:textColor="#C5C5C5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/progress_circular_2"
            app:layout_constraintTop_toBottomOf="@+id/progress_circular_2" />

        <com.example.base_project.base.BaseTextview
            android:id="@+id/txt_end_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12sp"
            android:text="00:50"
            android:textColor="#C5C5C5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_start_2"
            app:layout_constraintEnd_toStartOf="@+id/ic_play_2"
            app:layout_constraintTop_toBottomOf="@+id/progress_circular_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>